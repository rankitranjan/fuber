<p id="notice"><%= notice %></p>

<h1>Listing Cars</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Availability</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.color %></td>
        <td><%= car.availability %></td>
        <td><%= car.location %></td>
        <td><%= link_to 'Show', api_v1_car_path(car) %></td>
        <td><%= link_to 'Edit', edit_api_v1_car_path(car) %></td>
        <td><%= link_to 'Destroy', api_v1_car_path(car), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

